<header>    
    <nav>
      <%= link_to image_tag("logo.png"), root_path %>
      <ul class="left">
        <li>
          <%= nav_link_to "All Movies", movies_path %>
        </li>
        <li>
          <%= nav_link_to "Upcoming Releases", filtered_movies_path(:upcoming) %>
        </li>
        <li>
          <%= nav_link_to "Recently Released", filtered_movies_path(:recent) %>
        </li>
        <li>
          <%= nav_link_to "Box Office Hits", filtered_movies_path(:hits) %>
        </li>
        <li>
          <%= nav_link_to "Most Reviews", filtered_movies_path(:hits) %>
        </li>
      </ul>
      <ul class="right">
        <% if current_user %>
          <li>
            <%= link_to current_user.name, current_user %>
          </li>
          <li>
            <%= link_to "Account Settings", edit_user_path(current_user) %>
          </li>
        <% else %>
          <li>
            <%= link_to "Sign In", signin_path, class: "button" %>
            <%= link_to "Sign Up", signup_path, class: "button" %>
          </li>
        <% end %>  
      </ul>    
    </nav>
</header>    