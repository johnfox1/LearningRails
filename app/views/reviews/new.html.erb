<h1>New review for <%= link_to @movie.title, @movie %></h1>

<%= form_with(model: [@movie, @review]) do |f| %>

    <%= render "shared/errors", object: @review %>

    <%= f.label :stars %>
    <%= f.select :stars, Review::STARS, prompt: "Select from options" %>

    <%= f.label :comment %>
    <%= f.text_area :comment, rows:10, placeholder: "What did you think?" %>

    <%= f.submit "Post Review" %>

<% end %>